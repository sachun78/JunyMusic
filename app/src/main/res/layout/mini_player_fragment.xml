<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mini_player_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mini_player_background">

    <ImageView
        android:id="@+id/mini_player_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mini_player_margin"
        android:layout_marginRight="@dimen/mini_player_margin"
        android:layout_marginTop="@dimen/mini_player_margin"
        android:layout_marginBottom="@dimen/mini_player_margin"
        android:src="@drawable/btn_songs_off_default"/>
    <ImageView
        android:id="@+id/mini_player_btn"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mini_player_margin"
        android:layout_marginRight="@dimen/mini_player_margin"
        android:layout_marginTop="@dimen/mini_player_margin"
        android:layout_marginBottom="@dimen/mini_player_margin"
        android:src="@drawable/btn_play02_default"/>
    <LinearLayout
        android:id="@+id/mini_player_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mini_player_margin"
        android:layout_marginBottom="@dimen/mini_player_margin"
        android:layout_toRightOf="@id/mini_player_img"
        android:layout_toLeftOf="@id/mini_player_btn"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mini_player_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:singleLine="true"
            android:text="MiniPlayer"/>
        <ProgressBar
            android:id="@+id/mini_player_progress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/mini_custom_progressbar_02"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>
</RelativeLayout>