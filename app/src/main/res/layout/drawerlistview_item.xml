<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/drawerlist_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="My Music"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/drawerlist_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/drawerlist_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_songs_off_pressed"/>
        <TextView
            android:id="@+id/drawerlist_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/drawerlist_img"
            android:text="My Music"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/drawerlist_img"
            android:layout_alignParentBottom="true"
            android:background="@drawable/abc_list_divider_holo_dark"/>
    </RelativeLayout>
</LinearLayout>